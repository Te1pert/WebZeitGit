<!DOCTYPE html>
@using Microsoft.AspNetCore.Http;


<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebZeit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbarTop border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WebZeit</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="navItem">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="navItem">
                            <a class="nav-link text-dark" asp-area="/Pages" asp-page="/Mitarbeiter/Index">Mitarbeiter</a>
                        </li>
                        <li class="navItem">
                            <a class="nav-link text-dark" asp-area="/Pages" asp-page="/Zeit/Index">Zeit</a>
                        </li>
                        <li class="navItem">
                            <a class="nav-link text-dark" asp-area="/Pages" asp-page="/Nachrichtenportal/index">Nachrichtenportal</a>
                        </li>

                        @*<li class="navItem"></li>*@



                        <li class="navItem" style="position:absolute;right:50px">
                            <a style="font-weight:600" class="nav-link text-dark" asp-area="/Pages" asp-page="/Administrator/Index">Administrator</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        
            <div>
                <ul>
                    <li class="hm2">Anwesendstatus: </li>
                    <li class="hm2"><p style="font-weight:bold;color:@Context.Session.GetString("AnwStatusColor")">@Context.Session.GetString("AnwStatus")</p></li>
                </ul>
            </div>

            @*<div>
                <ul>
                    <li class="hm2">Zeit: </li>
                    <li class="hm2"><p style="font-weight:bold"></p></li>
                </ul>
            </div>*@

        

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    
</body>
</html>

